<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="SkyTextInputLayout">
    <attr format="string" name="hint"/>
    <attr format="string" name="text"/>
    <attr format="color" name="error_color"/>
    <attr format="string" name="error_text"/>
    <attr format="enum" name="inputType">
      <enum name="text" value="0"/>
      <enum name="number" value="1"/>
      <enum name="phone" value="2"/>
      <enum name="password" value="3"/>
      <enum name="email" value="4"/>
    </attr>
  </declare-styleable>

</resources>